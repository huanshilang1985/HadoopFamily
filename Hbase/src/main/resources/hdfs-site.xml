<!-- Put site-specific property overrides in this file. -->

<configuration>
    <!--注释配置数据块的冗余度，默认是3-->
    <property>
        <name>dfs.replication</name>
        <value>2</value>
    </property>
    <!-- 配置HDFS数据块和元数据保存的目录 -->
    <property>
        <name>dfs.namenode.name.dir</name>
        <value>/opt/hd/name</value>
    </property>
    <property>
        <name>dfs.datanode.data.dir</name>
        <value>/opt/hd/data</value>
    </property>
    <!-- 配置secondaryNameNode所在的服务器 -->
    <property>
        <name>dfs.namenode.secondary.http-address</name>
        <value>hd102:50090</value>
    </property>
</configuration>
